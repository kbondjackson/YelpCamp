<div id="map" style="width: 1300px; height:500px"></div>
    <H1 class="Camp-title"> All Campgrounds</H1>
    <div>
        <a class="btn btn-primary" href="/campgrounds/new">Add Campground</a>
    </div>
    <% for(let camp of campground) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= camp.images[0].url %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <script src="/javascripts/clusterMap.js"></script>